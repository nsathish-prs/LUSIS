<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="sg.edu.nus.iss.mobilelusis.RDepartmentbreakdownDetail" >

    <TableRow
        android:id="@+id/id_table_d_row1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp" >

        <TextView
            android:id="@+id/id_title_r_departmentName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="English Department"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textStyle="bold" />
    </TableRow>
    
    

    <TableRow
        android:id="@+id/id_table_d_row2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/id_table_d_row1"
        android:layout_marginTop="40dp" >

        <TextView
            android:id="@+id/id_stitle_r_deptbreakdown"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="Stapler"
            android:textAppearance="?android:attr/textAppearanceMedium" />
    </TableRow>

    <TableRow
        android:id="@+id/id_table_d_row3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/id_table_d_row2"
        android:layout_below="@+id/id_table_d_row2"
        android:layout_marginTop="55dp" >

        <TextView
            android:id="@+id/id_stile_r_totalUnitRequired"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:text="Total Unit Required" />

        <EditText
            android:id="@+id/id_num_r_totalUnitRequired"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="numberSigned"
            android:text="10"
            android:enabled="false" />
    </TableRow>

    <TableRow
        android:id="@+id/id_table_d_row4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/id_table_d_row3"
        android:layout_below="@+id/id_table_d_row3"
        android:layout_marginTop="48dp" >

        <TextView
            android:id="@+id/id_stitle_r_totalUnitRetrieved"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:text="Total Unit Retrieved"/>

        <EditText
            android:id="@+id/id_num_r_totoalUnitRetrieved"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:ems="9"
            android:inputType="numberSigned">
            
			<requestFocus />
            
        </EditText>
    </TableRow>

</RelativeLayout>