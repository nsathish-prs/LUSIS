<ScrollView xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context="sg.edu.nus.iss.mobilelusis.store.DisbursementDetailActivity" >

		<RelativeLayout
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content" >
		
		    <TableRow
		        android:id="@+id/TableRow01"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:layout_alignParentLeft="true"
		        android:layout_alignParentTop="true" 
		        android:layout_marginTop="10dp" >
		
		        <TextView
		            android:id="@+id/TextView02"
		            android:layout_width="210dp"
		            android:layout_height="wrap_content"
		            android:text="Representative Name: "
		            android:textAppearance="?android:attr/textAppearanceMedium" />
		
		        <TextView
		            android:id="@+id/id_txt_disb_deptRepName"
		            android:layout_width="match_parent"
		            android:layout_height="wrap_content"
		            android:layout_marginLeft="40dp"
		            android:layout_toRightOf="@+id/list_req_name"
		            android:text="Nagarajan Sathish"
		            android:textAppearance="?android:attr/textAppearanceMedium" />
		    </TableRow>
		
		    <TableRow
		        android:id="@+id/TableRow011"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:layout_below="@+id/TableRow01"
		        android:layout_marginTop="10dp" >
		
		        <TextView
		            android:id="@+id/TextView022"
		            android:layout_width="210dp"
		            android:layout_height="wrap_content"
		            android:text="Collection Point"
		            android:textAppearance="?android:attr/textAppearanceMedium" />
		
		        <TextView
		            android:id="@+id/id_txt_disb_colPoint"
		            android:layout_width="match_parent"
		            android:layout_height="wrap_content"
		            android:layout_marginLeft="40dp"
		            android:layout_toRightOf="@+id/list_req_name"
		            android:text="Science Department"
		            android:textAppearance="?android:attr/textAppearanceMedium" />
		    </TableRow>
		
		 
		    <TableRow
		        android:id="@+id/id_table_d_row1"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:layout_below="@+id/TableRow011"
		        android:background="#CCCCCC"
		        android:layout_marginTop="35dp"
		        android:padding="10dp" >
		
		        <TextView
		            android:id="@+id/id_txt_raisevoucher_itemdesc"
		            android:layout_width="300dp"
		            android:layout_height="wrap_content"
		            android:text="Item Description"
		            android:textAppearance="?android:attr/textAppearanceMedium" />
		
		        <TextView
		            android:id="@+id/id_r_needed"
		            android:layout_width="match_parent"
		            android:layout_height="wrap_content"
		            android:text="Item Required"
		            android:textAppearance="?android:attr/textAppearanceMedium" />
		    </TableRow>
		    
		  <TableRow
		        android:id="@+id/id_table_d_row11111"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:layout_below="@+id/id_table_d_row1"
		        android:padding="10dp" >    
		      <ListView
			        android:id="@+id/id_listview_disb_itemRequestedList"
			        android:layout_width="match_parent"
			        android:layout_height="400dp" >
			    </ListView>
		 
		
		</TableRow>
		
		<TableRow
		        android:id="@+id/id_table_d_row99"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:layout_below="@+id/id_table_d_row11111"
		        android:padding="10dp" >
	
		    	 <TextView
		            android:id="@+id/id_txt_raisevoucher_approved"
		            android:layout_width="300dp"
		            android:layout_height="wrap_content"
		            android:text="Approved By"
		            android:textAppearance="?android:attr/textAppearanceLarge" />
		
			
		   
		</TableRow>
		   
		<TableRow
		        android:id="@+id/id_table_d_row1111"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:layout_below="@+id/id_table_d_row99"
		        android:padding="10dp" >

			<Switch
			    android:id="@+id/id_switch_disb_approve"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:text="Approve"
			    android:visibility="visible" />
		   
		</TableRow>
		
		<TableRow
		    android:id="@+id/id_table_d_row1221"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:layout_below="@+id/id_table_d_row1111"
		    android:layout_alignParentLeft="true"
		    android:padding="10dp" >

			<ImageView
			    android:id="@+id/id_img_disb_signature"
			    android:layout_width="wrap_content"
			    
			    android:layout_height="wrap_content"
			    android:src="@drawable/ic_launcher" />
		    
		</TableRow>
		
		<TableRow
		        android:id="@+id/id_table_d_row9999"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:layout_below="@+id/id_table_d_row1221"
		        android:padding="10dp" >
	
		    	 <TextView
		            android:id="@+id/id_txt_disb_approved_date"
		            android:layout_width="match_parent"
		            android:layout_height="wrap_content"
		            android:text="Date"
		            android:visibility="invisible"
		            android:textAppearance="?android:attr/textAppearanceLarge" />	
		   
		</TableRow>
		</RelativeLayout>
 </ScrollView>