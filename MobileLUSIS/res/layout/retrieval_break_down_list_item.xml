<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp" >
    
    
    <TableRow
        android:id="@+id/id_table_d_row1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true">
         
      <TextView
	        android:id="@+id/id_txt_rdeptBreakdown_deptCode"
	        android:layout_width="100dp"
	        android:layout_height="wrap_content"
	        android:gravity="center"
	        android:textAppearance="?android:attr/textAppearanceMedium" />

	    <TextView
	        android:id="@+id/id_txt_rdeptBreakdown_deptName"
	        android:layout_width="200dp"
	        android:layout_height="wrap_content"
	        android:gravity="center"
	        android:textAppearance="?android:attr/textAppearanceMedium" />

	    <TextView
	        android:id="@+id/id_num_rdeptBreakdown_needed"
	        android:layout_width="150dp"
	        android:layout_height="wrap_content"
	        android:gravity="center"
	        android:textAppearance="?android:attr/textAppearanceSmall" />

	    <EditText
	        android:id="@+id/id_num_rdeptBreakdown_retrieved"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:focusable="true"
	        android:gravity="center"
	        android:inputType="numberSigned"
	        android:textAppearance="?android:attr/textAppearanceSmall" >
	        
	    </EditText>
	            
    </TableRow>

    

</RelativeLayout>
